---
import type { Lang } from '../i18n/translations';
import { t } from '../i18n/translations';

interface Props {
  lang: Lang;
  items: { label: string; href?: string }[];
}

const { lang, items } = Astro.props;

const allItems = [
  { label: t(lang, 'breadcrumb.home'), href: `/${lang}/` },
  ...items,
];
---

<nav class="breadcrumb" aria-label="Breadcrumb">
  <ol class="breadcrumb-list">
    {allItems.map((item, index) => (
      <li class="breadcrumb-item">
        {index > 0 && <span class="breadcrumb-sep" aria-hidden="true">/</span>}
        {item.href && index < allItems.length - 1 ? (
          <a href={item.href}>{item.label}</a>
        ) : (
          <span aria-current="page">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumb {
    padding: 1rem 0;
  }

  .breadcrumb-list {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0;
    padding: 0;
    margin: 0;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    margin-bottom: 0;
  }

  .breadcrumb-sep {
    color: var(--fg-text-muted);
    margin: 0 0.25rem;
  }

  .breadcrumb-item a {
    color: var(--fg-primary);
    text-decoration: none;
    min-height: 48px;
    display: inline-flex;
    align-items: center;
  }

  .breadcrumb-item a:hover {
    text-decoration: underline;
  }

  .breadcrumb-item span[aria-current] {
    color: var(--fg-text-muted);
    min-height: 48px;
    display: inline-flex;
    align-items: center;
  }
</style>
