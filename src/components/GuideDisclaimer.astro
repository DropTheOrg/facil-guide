---
import type { Lang } from '../i18n/translations';
import { t } from '../i18n/translations';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<aside class="guide-disclaimer" role="note">
  <p>{t(lang, 'guide.disclaimer')}</p>
</aside>

<style>
  .guide-disclaimer {
    margin-top: 2rem;
    padding: 1rem 1.25rem;
    border-left: 3px solid var(--fg-border);
    background: var(--fg-bg-card);
    border-radius: 0 6px 6px 0;
  }

  .guide-disclaimer p {
    color: var(--fg-text-muted);
    font-size: 0.85rem;
    line-height: 1.6;
    margin: 0;
  }
</style>
